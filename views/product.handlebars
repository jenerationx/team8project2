<div class="container">
  <div class="page-header">
    <h3>Product Details
      <div style="float: right; cursor: pointer;">
        <a href="/cart"><i class="material-icons small my-cart-icon">shopping_cart</i></a><span
          class="badge"></span></a>
      </div>
    </h3>
  </div>
  <div class="row">
    <div class="col s10">
      <div class="card">
        <div class="card-body center-align">
          <br>
          <h5 class="card-title"> {{ product.Description }}</h5>
          <br>
          <div class="card-image">
            <img src="{{ product.Image }}">
          </div>
          <p>{{ product.Description }}</p>
          <p>Price: ${{ product.Price }}</p>
          <p>Customer Rating: {{ product.Customer_Rating }}</p>
          <a onclick="M.toast({html: '{{ product.Description }} added to cart!'})" id="add-cart"
            class="btn waves-effect waves-teal"><i class="material-icons left">add_shopping_cart</i>add
            to cart</a>
        </div>
        <br>
      </div>
      <a onclick="history.back(-1)" />‚Üê Back</a>
    </div>
  </div>
</div>